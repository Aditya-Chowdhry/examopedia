<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.materialdesign.Tabs.TabOne">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/one"
        android:text="Link 1"
        android:textSize="25dp"/>

    <TextView android:text="This is Tab One" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light"
        android:clickable="true"
        android:id="@+id/link_one"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:text="Link 2"
        android:id="@+id/two"
        android:layout_marginTop="20dp" />


    <TextView android:text="This is Tab One" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:clickable="true"
        android:id="@+id/link_two"
        android:textColor="@android:color/holo_blue_light"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:id="@+id/three"
        android:text="Link 3"
        android:layout_marginTop="20dp" />


    <TextView android:text="This is Tab One" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:clickable="true"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/link_three"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/four"
        android:text="Link 4"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>


    <TextView android:text="This is Tab One" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/link_four"
        />

</LinearLayout>
